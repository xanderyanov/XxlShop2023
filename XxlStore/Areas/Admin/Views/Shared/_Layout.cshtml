@{
    var user = Bucket?.User;
    string userName = user?.Name;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ADMIN - @userName</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/lib/jquery/jquery.js" asp-append-version="true"></script>
</head>
<body>
    <div class="layout">
        <div class="bg-dark text-white p-2">
            <span class="navbar-brand ml-2">ADMIN - @userName</span>
        </div>
        <div class="container-fluid">
            <div class="row">
                <header class="d-flex justify-content-center py-3">
                    <ul class="nav nav-pills">
                        
                        @if (user == null) {
                            <li class="nav-item"><a href="/Login" class="nav-link">Login</a></li>
                        } else {
                            <li class="nav-item"><a href="/" class="nav-link" aria-current="page">Главная</a></li>
                            @if (user.IsActive && user.IsAdmin) {
                                <li class="nav-item"><a href="/Update" class="nav-link">Update</a></li>
                            }
                            
                            <li class="nav-item"><a href="/Admin" class="nav-link">Blog Edit</a></li>
                            <li class="nav-item"><a href="/OrderAdmin" class="nav-link">Заказы</a></li>
                            @if (user.IsActive && user.IsSuperAdmin) {
                                <li class="nav-item"><a href="/Admin/UsersList" class="nav-link">Users</a></li>
                            }
                            
                            <li class="nav-item"><a href="/Login/Logout" class="nav-link">Logout</a></li>
                        }
                    </ul>
                </header>
            </div>
            <div class="row">
                <div class="col-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>